{
  "fields": [
    {
      "id": "questionCount",
      "label": "Question Count",
      "type": "number",
      "datatype": "integer",
      "min": 1,
      "max": 100,
      "placeholder": "Enter number of questions",
      "required": true
    },
    {
      "id": "difficulty",
      "label": "Difficulty Level & Reward",
      "type": "select",
      "datatype": "string",
      "required": true,
      "options": [
        { "value": "easy", "label": "Easy (Low Reward)" },
        { "value": "medium", "label": "Medium (Medium Reward)" },
        { "value": "hard", "label": "Hard (High Reward)" },
        { "value": "expert", "label": "Expert (Maximum Reward)" }
      ]
    },
    {
      "id": "features",
      "label": "Game Features",
      "type": "checkbox",
      "datatype": "array",
      "required": false,
      "options": [
        { "value": "leaderboard", "label": "Leaderboard" },
        { "value": "powerups", "label": "Power-ups & Boosters" },
        { "value": "timelimit", "label": "Time Limit" },
        { "value": "hints", "label": "Hint System" }
      ]
    },
    {
      "id": "playerEmailRequired",
      "label": "Require Player Email",
      "type": "checkbox",
      "datatype": "boolean",
      "required": false
    },
    {
      "id": "description",
      "label": "Rule Description",
      "type": "textarea",
      "datatype": "string",
      "placeholder": "Describe the game rule in detail, including objectives, scoring system, and any special conditions...",
      "required": true
    },
    {
      "id": "isActive",
      "label": "Enable Rule",
      "type": "checkbox",
      "datatype": "boolean",
      "required": false
    },
    {
      "id": "timeLimit",
      "label": "Time Limit (minutes)",
      "type": "range",
      "datatype": "integer",
      "min": 1,
      "max": 60,
      "required": false
    },
    {
      "id": "ageRating",
      "label": "Age Rating",
      "type": "radio",
      "datatype": "string",
      "required": true,
      "options": [
        { "value": "all", "label": "All Ages (13+)" },
        { "value": "adult", "label": "Adult Only (21+)" }
      ]
    }
  ]
}
