# Copy this file to .env and fill in your values

# API Configuration
# Games API - for games management section
VITE_GAMES_API_BASE_URL=https://your-games-ngrok-url.ngrok-free.dev

# Events API - for events simulator section
VITE_EVENTS_API_BASE_URL=https://your-events-ngrok-url.ngrok-free.app

# Legacy/Fallback API URL
VITE_API_BASE_URL=http://localhost:8080

# API Authentication
VITE_API_AUTH_TOKEN=Basic your_base64_encoded_credentials

# Development Configuration  
VITE_NODE_ENV=development

# Optional: Ngrok Auth Token (if using authenticated tunnels)
VITE_NGROK_AUTH_TOKEN=your_ngrok_auth_token_here
